/* pages/index/opencard/opencard.wxss */
.vipcard{
  display: flex;
  flex-direction: column;
  width:92%;
  height:300rpx;
  border-radius: 20rpx;
  color:#FFF;
  font-size:36rpx;
  background: linear-gradient(#61aadb,#61aadb, #33ccff,#61aadb,#61aadb);
  margin-top:20rpx;
}

.logo{
  width:80rpx;
  margin-top:20rpx;
  margin-left:50rpx;
  float:left;
}

.company{
   float:left;
   margin-left:20rpx;
   margin-top:30rpx;
   font-size:40rpx;
}

.help{
  float:left;
  margin-top: 130rpx;
}

.vip{
   color:#FFF;
   position: absolute;
   top:130rpx;
   left:50%;
   font-size: 80rpx;
   font-style:italic;
   text-shadow: 0 1px 0 #ccc, 0 2px 0 #c9c9c9, 0 3px 0 #bbb, 0 4px 0 #b9b9b9, 0 5px 0 #aaa, 0 6px 1px rgba(0,0,0,0.1), 0 0 5px rgba(0,0,0,0.1),0 1px 3px rgba(0,0,0,0.3),0 3px 5px rgba(0,0,0,0.2),0 5px 10px rgba(0,0,0,0.25);
}

.register{
  width:100%;
  padding: 30rpx 0;
}
.btnphonenum{
  border-radius: 20rpx;
  background-color:  #33ccff;
  color:#FFF;
  font-size: 30rpx;
}